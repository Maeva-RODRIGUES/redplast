{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS" 
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "startCommand": "python manage.py runserver 0.0.0.0:8000",
    "sleepApplication": false,
    "multiRegionConfig": {
      "europe-west4-drams3a": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}